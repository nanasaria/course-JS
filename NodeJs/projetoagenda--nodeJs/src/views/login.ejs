<%- include("includes/head") %> <%- include("includes/nav") %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar ou Entrar na conta</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include("includes/messages")%>

      <div class="row">
        <div class="col-lg my-3">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
          <form class="form-cadastro" action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<% csfrToken %>" />
            <div class="mb-3">
              <label class="form-label">Seu Email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="mb-3">
              <label class="form-label">Senha</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">
              Criar a minha conta
            </button>
          </form>
        </div>
        <div class="col-lg my-5">
          <h4>Realizar login</h4>
          <p>Se você tem uma conta, realize o login abaixo</p>
        </div>

        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value="<% csfrToken %>" />
          <div class="mb-3">
            <label class="form-label">Seu Email</label>
            <input type="email" class="form-control" name="email" />
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">
            Entrar na minha conta
          </button>
        </form>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include("includes/footer") %>
</div>
